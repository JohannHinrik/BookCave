      <div class="ui-content">
        <div class="row">
          <div class="col-sm-8 col-md-8 col-lg-8 col-lg-offset-2 acc-col">
            <section>
              <h3>Contact Information</h3>
              <form class="ng-pristine ng-valid" role="form">
                <div class="row">
                   <div class="col-sm-12">
                    <label for="inputName" class="control-label">Name:</label>
                      <input type="text" class="form-control" id="inputName" value="@Model.FirstName @Model.LastName"> 
                  </div>               
                </div>
                <div class="row">
                  <div class="col-sm-6">
                    <label for="inputEmail" class="control-label">Email:</label>
                      <input type="email" class="form-control" id="inputEmail" value="@Model.Email">
                  </div>
                </div>
              <div class="row">
                  <div class="col-sm-6">
                    <label for="inputUsername" class="control-label">Username:</label>
                      <input type="email" class="form-control" id="inputUsername" value="@Model.UserName">
                  </div>
                </div>
          
                <div class="row">
                  <div class="col-sm-4">
                    <label for="inputAddress" class="control-label">Address:</label>
                      <input type="email" class="form-control" id="inputAddress" value="@Model.Address">
                  </div>
                  <div class="col-sm-4">
                    <label for="inputCity" class="control-label">City:</label>
                      <input type="text" class="form-control" id="inputCity" value="@Model.City">
                  </div> 

                  <div class="col-sm-2">
                    <label for="inputCountry" class="control-label">Country:</label>
                      <input type="text" class="form-control" id="inputCountry" value="@Model.Country">
                  </div> 
                  <div class="col-sm-2">
                    <label for="inputBook" class="control-label">Favorite Book:</label>
                      <input type="text" class="form-control" id="inputBook" value="@Model.FavoriteBook">
                  </div> 
                </div>
                </form>
        </section>

           

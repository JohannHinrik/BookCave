        <div class="ui-image">
          <!-- User Image -->
          @{string path = Model.Image;}
          <img src="@Url.Content(path)" alt="Avatar" class="avatar" class="img-responsive" width="100" height="100">
        </div>
      </div>
    <!-- UI - X Starts -->

@model BookCave.Models.ViewModels.LoginViewModel

@{
  ViewData["Title"] = "Login";
}
<!-- The login page for existing users -->
<h1>Login!</h1>
<form asp-action="Login" asp-controller="Account" class="form-horizontal">
  <div class="form-group">
    <input type="email" asp-for="Email" class="form-control" placeholder="Enter your email.." />
    <span asp-validation-for="Email" class="text-danger"></span>
  </div>
  <div class="form-group">
    <input type="password" asp-for="Password" class="form-control" placeholder="Enter your password.." />
    <span asp-validation-for="Password" class="text-danger"></span>
  </div>
  <h5>*Password must contain: at least one uppercase letter, number and alphanumeric</h5>
  <div class="checkbox">
    <label>
      <input type="checkbox" asp-for="Remember" /> Remember me!
    </label>
  </div>
  <div class="form-group">
    <input type="submit" class="LoginButton" value="Login" />
  </div>
  <!-- Redirect to signup page for new users -->
  Dont have an account? <button type="button"><a asp-area="" asp-controller="Account" asp-action="SignUp">Sign up!</a></button>
</form>
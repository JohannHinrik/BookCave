@model BookCave.Models.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Log in";
}

<h1>Login!</h1>

<form asp-action="Login" asp-controller="Account" class="form-horizontal">

<div class="form-group">
    <input type="email" asp-for="Email" class="form-control" placeholder="Enter your email.."/>
</div>

<div class="form-group">
    <input type="password" asp-for="Password" class="form-control" placeholder="Enter a password.."/>
</div>

<div class="checkbox">
    <label>
        <input type="checkbox" asp-for="Remember" /> Remember me!
    </label>
</div>

<div class="form-group">
    <input type="submit" class="LoginButton" value="Login"/>
</div>

Dont have an account? <button type="button"> Sign up!</button>
</form>
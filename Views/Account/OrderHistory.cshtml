@model List<BookCave.Models.ViewModels.OrderListViewModel>

@{

}
<!-- List of all books in wishlist: -->
<div class="container">
    @foreach(var book in Model) 
    {
	<table id="orderHistory" class="table table-hover table-condensed">
    	<thead>
		</thead>
		<tbody>
			<tr>
				<td data-th="Product">
					<div class="row">
					<div class="col-sm-2 hidden-xs"><img src="~/images/books/(@book.BookId).jpg" alt="BookPhoto" class="img-responsive"/></div>
					<div class="col-sm-10">
						<h4 class="nomargin"><a asp-controller="Book" asp-action="Details" asp-route-id="@book.BookId" class="bookTitle">@book.Title</a> </h4>
					</div>
					</div>
				</td>
			</tr>
		</tbody>
	</table>
    }
</div>
@model List<BookCave.Models.ViewModels.CartViewModel>
  @{
    ViewData["Title"] = "Order History";
  }
  <!-- List of all the books that the user has ordered -->
  <h1>This is your order history!</h1>
  <div class="container">
    @foreach (var a in Model)
    {
      @foreach (var book in a.Books)
      {
        <table id="orderHistory" class="table table-hover table-condensed">
          <thead>
          </thead>
          <tbody>
            <tr>
              <td data-th="Product">
                <div class="row">
                  <div class="col-sm-2 hidden-xs"><img src="~/images/books/(@book.BookId).jpg" alt="BookPhoto" class="img-responsive" /></div>
                  <div class="col-sm-10">
                    <h4 class="nomargin"><a asp-controller="Book" asp-action="Details" asp-route-id="@book.BookId" class="bookTitle">@book.Title</a> </h4>
                  </div>
                </div>
              </td>
            </tr>
          </tbody>
        </table>
      }
    }
  </div>

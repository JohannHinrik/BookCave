@model BookCave.Models.ViewModels.LogInViewModel

<h1> Sign in! </h1>

<form asp-action="LogIn" asp-controller="Account" class="form-horizontal">

<div class="form-group">
    <input type="email" asp-for="Email" class="form-control" placeholder="Enter your email.."/>
</div>


<div class="form-group">
    <input type="password" asp-for="Password" class="form-control" placeholder="Enter password.."/>

</div>

<div class="checkbox">
    <label>
        <input type="checkbox" asp-for="RememberMe" /> Remember me
    </label>
</div>
<div class="form-group">
    <input type="submit" class="LogInButton" value="LogIn">Create account! </button>
</div>

</form>



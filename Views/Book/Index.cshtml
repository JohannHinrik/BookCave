@model List<BookCave.Models.ViewModels.BookListViewModel>

@{
    ViewData["Title"] = "Book Page";
}

<h2 id="BooksTile">Books</h2>

<!--  Printing all Books
 -->
<div>
    <ul class="pagination">
    @foreach(var book in Model.OrderByDescending(x=>x.Title).Take(6))
    {
        <li class="page-item">
        <div class="col-xs-6 col-lg-6">
        <hr>
            <!-- Book Cover  -->
            <div class="bookCover">
                <img src="~/images/books/(@book.BookId).jpg" alt="@book.Title" class="bookCover">
            </div>
            <!-- Book info  -->
            <div class="col-xs-6 col-lg-6">
                <a asp-controller="Book" asp-action="Details" asp-route-id="@book.BookId" class="bookTitle">@book.Title</a> <br/>
                Genre: @book.Genre <br/>
                Author: @book.Author <br/>
               <p class="bookPrice">@book.Price Kr</p>

                @for(var i = @book.Rating; i > 0; i--)
                {
                    <i class="fas fa-star"></i>
                }
                @for(var i = @book.Rating; i < 5; i++)
                {
                    <i class="far fa-star"></i>
                }
            </div>
            <div class="addToButtons">
                <button type="button" class="cartButton">Add to Cart</button>
                <br/>
                <button type="button" class="wishListButton"><i class="far fa-heart"></i></button>
            </div>
        </div>
        </li>
    }
    <li class="page-item disabled"><a class="page-link" href="#">Previous</a></li>
     <li class="page-item"><a class="page-link" href="#">Next</a></li>
    </ul>
</div>
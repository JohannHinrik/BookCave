@model Tuple<List<BookCave.Models.ViewModels.BookListViewModel>,List<BookCave.Models.ViewModels.AuthorListViewModel>>

<h2>TOP 10 BOOKS</h2>
<div class="bookDetails">
    @foreach(var book in Model.Item1)
    {
        <div class="bookDiv">
            <div>
                <img src="~/images/books/(@book.BookId).jpg" alt="@book.Title" class="bookCover">
            </div>
            <div class="BookInfo">
                <a asp-controller="Book" asp-action="Details" asp-route-id="@book.BookId">@book.Title</a> <br/>
                Genre: @book.Genre <br/>
                Author: @book.Author <br/>
                <p class="bookPrice">@book.Price Kr</p>
            </div>
            <div class="addToButtons">
                <button type="button" class="cartButton">Add to Cart</button>
                <br/>
                <button type="button" class="wishListButton">Add to WishList</button>
            </div>
        </div>
    }
</div>

<h2>TOP 10 AUTHORS</h2>
<div class="authorDetails">
    @foreach(var author in Model.Item2)
    {
        <div>
            @author.Name
            <br/>
            Rating: @author.Rating
        </div>
    }
</div>